<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch en botones"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnOnClick"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="2"
        android:textSize="40sp"
        android:text="onClick" />

    <Button
        android:id="@+id/btnOnLongClick"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="2"
        android:textSize="40sp"
        android:text="onLongClick" />

    <Button
        android:id="@+id/btnOnTouch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="2"
        android:textSize="40sp"
        android:text="onTouch" />

    <EditText
        android:id="@+id/fieldDeTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Ingresa algo bro"
        android:textStyle="italic"
        android:layout_marginHorizontal="10dp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/fieldDeTextoDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Ingresa otra cosa bro"
        android:textStyle="italic"
        android:layout_marginHorizontal="10dp"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/txtDetalle"
        android:layout_weight="0.3"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="Detalles"
        />

</LinearLayout>